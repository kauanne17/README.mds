<%- include('../partials/header', { title: 'Novo Aluno' }) %>
<div class="col-12 col-md-8 col-lg-6">
  <div class="card shadow-sm">
    <div class="card-body p-4">
      <h4 class="mb-3"><i class="bi bi-person-plus-fill me-2 text-primary"></i>Novo Aluno</h4>
      <form method="post" action="/students">
        <div class="mb-3"><label class="form-label">Nome</label><input class="form-control" name="name" required></div>
        <div class="mb-3"><label class="form-label">E-mail</label><input class="form-control" name="email" type="email"></div>
        <div class="mb-3"><label class="form-label">Curso</label>
          <select name="course_id" class="form-select">
            <option value="">-- nenhum --</option>
            <% courses.forEach(c => { %><option value="<%= c.id %>"><%= c.name %></option><% }) %>
          </select>
        </div>
        <button class="btn btn-primary">Salvar</button>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
