<%- include('../partials/header', { title: 'Usuários' }) %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="page-title">
    <i class="bi bi-person-badge fs-3 text-primary"></i>
    <div>
      <h3 class="mb-0">Usuários</h3>
      <small class="text-muted">Contas do sistema</small>
    </div>
  </div>
  <div>
    <a class="btn btn-primary" href="/auth/register"><i class="bi bi-person-plus-fill me-1"></i>Novo</a>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-3">
    <table class="table mb-0 align-middle">
      <thead class="small text-muted"><tr><th>ID</th><th>Usuário</th><th class="text-end">Ações</th></tr></thead>
      <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><strong><%= u.username %></strong></td>
          <td class="text-end">
            <a class="btn btn-sm btn-outline-secondary me-1" href="/users/<%= u.id %>/edit"><i class="bi bi-pencil"></i></a>
            <form style="display:inline" method="post" action="/users/<%= u.id %>?_method=DELETE"><button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button></form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
