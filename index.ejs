<%- include('../partials/header', { title: 'Alunos' }) %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <div class="page-title">
    <i class="bi bi-people-fill fs-3 text-primary"></i>
    <div>
      <h3 class="mb-0">Alunos</h3>
      <small class="text-muted">Lista de alunos com cursos associados</small>
    </div>
  </div>
  <div>
    <a class="btn btn-primary" href="/students/new"><i class="bi bi-person-plus-fill me-1"></i>Novo Aluno</a>
  </div>
</div>

<div class="row mb-3 hero-stats">
  <div class="col-md-4">
    <div class="stat p-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <div class="small text-muted">Total de alunos</div>
          <div class="h5 mb-0"><%= students.length %></div>
        </div>
        <i class="bi bi-people fs-2 text-primary"></i>
      </div>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-3">
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="small text-muted">
          <tr><th>ID</th><th>Nome</th><th>E-mail</th><th>Curso</th><th class="text-end">Ações</th></tr>
        </thead>
        <tbody>
        <% students.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><strong><%= s.name %></strong></td>
            <td><%= s.email || '-' %></td>
            <td><span class="badge bg-light text-dark"><i class="bi bi-book-half me-1"></i><%= s.Course ? s.Course.name : '—' %></span></td>
            <td class="text-end">
              <a class="btn btn-sm btn-outline-secondary me-1" href="/students/<%= s.id %>/edit"><i class="bi bi-pencil"></i></a>
              <form style="display:inline" method="post" action="/students/<%= s.id %>?_method=DELETE">
                <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
              </form>
            </td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
